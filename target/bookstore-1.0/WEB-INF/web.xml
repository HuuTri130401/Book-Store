<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>EmployeeLoginServlet</servlet-name>
        <servlet-class>com.se1611.servlets.EmployeeLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminBookServlet</servlet-name>
        <servlet-class>com.se1611.servlets.AdminBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InventoryServlet</servlet-name>
        <servlet-class>com.se1611.servlets.InventoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StaffBookServlet</servlet-name>
        <servlet-class>com.se1611.servlets.StaffBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StaffImportationServlet</servlet-name>
        <servlet-class>com.se1611.servlets.StaffImportationServlet</servlet-class>
    </servlet>

                        <!--MAPPING-->

    <servlet-mapping>
        <servlet-name>EmployeeLoginServlet</servlet-name>
        <url-pattern>/EmployeeLoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminBookServlet</servlet-name>
        <url-pattern>/AdminBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InventoryServlet</servlet-name>
        <url-pattern>/InventoryServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StaffBookServlet</servlet-name>
        <url-pattern>/StaffBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StaffImportationServlet</servlet-name>
        <url-pattern>/StaffImportationServlet</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>SITEMAP_PROPERTIES_FILE_LOCATION</param-name>
        <param-value>/WEB-INF/siteMap.properties</param-value>
    </context-param>
    <context-param>
        <param-name>AUTHENTICATION_PROPERTIES_FILE_LOCATION</param-name>
        <param-value>/WEB-INF/authentication.properties</param-value>
    </context-param>
    <filter>
        <filter-name>AuthenticationFilters</filter-name>
        <filter-class>com.se1611.filters.AuthenticationFilters</filter-class>
    </filter>
    <filter>
        <filter-name>DispatcherFilter</filter-name>
        <filter-class>com.se1611.filters.DispatcherFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilters</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>DispatcherFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>com.se1611.listeners.ContextListener</listener-class>
    </listener>
    <resource-ref>
        <res-ref-name>DBBOOKSTORE</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
